<%-include('../partials/header.ejs')%>
<%-include('../partials/navbar.ejs')%>
<style>
  @media (max-width: 750px)
  {
    .container{
      width: 100%;
    }
  }
</style>

<div class="container col-md-6" style="margin-top:1.5rem;">
  <h1>Groups <i class="fa-solid fa-user-group"></i></h1>
  <br>
  <%if(groups.length > 0){%>
    <%groups.forEach(group=>{%>
      <%
        space = encodeURIComponent(' ')
        encode_title = encodeURIComponent(group.dataValues.title)
          .replaceAll(space, '-')
      %>
      <div class="row">
        <div class="col-md-12">
          <div class="card text-center">
            <h2 class="card-header">
              <%=group.title%>
            </h2>
            <div class="card-body">
              <%if(group.description.length > 0){%>
              <h5 class="card-title">Description</h5>
              <p class="card-text"><%=group.description%></p>
              <%}%>
              <a href="group/<%=encode_title%>" class="btn btn-primary">Enter</a>
            </div>
          </div>
        </div>
      </div>
      <br>  
  <%})%>
  <%}else{%>
      <h3>No Groups Associated</h3>
  <%}%>
</div>

<%-include('../partials/footer.ejs')%>
