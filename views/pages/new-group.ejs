<%-include('../partials/header.ejs')%>

<%-include('../partials/navbar.ejs')%>

<div class="container">
    <div class="d-flex justify-content-center">
      <div class="card" style="width: 26rem; margin-top: 3rem">
        <div class="card-body">
          <h2 class="card-title">New Group <i class="fa-solid fa-user-group"></i></h2>
          <form action="/new-group-create" method="POST">
            <input type="text" placeholder="Group Name"
            name="title" class="form-control form-control-lg"
            value="<%=groupData.title%>">
            <br>
            <textarea placeholder="Description (Optional)" class="form-control"
            name="description"><%=groupData.description%></textarea>
            <br>
            <input type="password" name="passwordOne" class="form-control"
            placeholder="Password (Optional)"
            value="<%=groupData.passwordOne%>">
            <br>
            <input type="password" name="passwordTwo"
            class="form-control" placeholder="Password Again (Optional)"
            value="<%=groupData.passwordTwo%>"
            >
            <br>
            <button class="btn btn-primary btn-lg btn-block">
                Create
            </button>
            <br>
          </form>
        </div>
      </div>
    </div>
  </div>

  <h1><%=newGroupError%></h1>

<%-include('../partials/footer.ejs')%>
