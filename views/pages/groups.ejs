<%-include('../partials/header.ejs')%>
<%-include('../partials/navbar.ejs')%>

<div class="container" style="margin-top:1.5rem;width: 50rem;">
  <h1>Groups <i class="fa-solid fa-user-group"></i></h1>
  <div class="d-flex justify-content-center">
    <br>
    <div class="list-group" style="width:100%">
      <%if(groups.length > 0){%>
        <%groups.forEach(group=>{%>
            <%
              space = encodeURIComponent(' ')
              encode_title = encodeURIComponent(group.dataValues.title)
                .replaceAll(space, '-')
            %>
            <a href="group/<%=encode_title%>"
              class="list-group-item list-group-item-action"><%=group.dataValues.title%></a>
        <%})%>
      <%}else{%>
          <h3>No Groups Associated</h3>
      <%}%>
    </div>
  </div>
</div>

<%-include('../partials/footer.ejs')%>
